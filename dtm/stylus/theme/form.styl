// Form Styles
form
	input[type="text"]
	input[type="week"]
	input[type="url"]
	input[type="time"]
	input[type="tel"]
	input[type="password"]
	input[type="search"]
	input[type="number"]
	input[type="email"]
	input[type="date"]
	select
	textarea
		border-radius 15px
		box-shadow 0 0 20px 0 rgba(0, 0, 0, 0.08)
		padding 23px
		transition main-transition-seconds !important
		
		&.wpcf7-not-valid
			background error-bg-colour !important
		
		&:hover	
		&:focus
			box-shadow 0 0 30px 0 rgba(0, 0, 0, 0.15)
		
		+input-placeholder()
			color #AAA

	textarea
		min-width 100%
		max-width 100%
		min-height 120px
		max-height 200px
		margin-bottom -7px

	select
		background url('../dtm/images/svgs/select-arrow.svg')
		background-position 96% 50%
		background-repeat no-repeat

	input[type="submit"]
	button
		transition main-transition-seconds !important

.form-group
	margin-bottom 15px
	
	&:last-of-type
		margin-bottom 0

.form-repsonse
	> div
		padding 15px
		text-align center
		margin-top 15px
		
		&.error
			background error-bg-colour
			color error-text-colour

		&.success
			background success-bg-colour
			color success-text-colour