if blog
	/* Blog and Category */
	.blog
	.archive
		#content
			margin 0 -30px
		
		.post-row-wrapper
			&:before
			&:after
				content ""
				display table
			
			&:after
				clear both

		article
			margin-bottom 60px
			padding 0 30px
			float left
			width 50%
			
			.post-wrapper
				display block
				box-shadow 0 0 35px 0 rgba(0, 0, 0, 0.05)
				border-radius 20px
				position relative
				
				.post-wrapper-inner
					overflow hidden
					border-radius 20px

				.date
					padding 10px 15px
					background default-colour
					color white-colour
					position absolute
					left 30px
					top 30px
					border-radius 10px
					font-weight 600
				
				.img-wrapper
					height 500px
					
				.entry-body
					padding 40px
					
					.author
						text-transform uppercase
						letter-spacing 3px
						color #C1C1C1
						font-size 0.86em

					.entry-title
						margin 0 0 15px
						font-size 2.1em
						
					.content
						color text-colour
						margin-bottom 20px
						
					.btn
						transition main-transition-seconds
				
				&:hover
					box-shadow 0 0 35px 0 rgba(0, 0, 0, 0.15)
	
		&:before
		&:after
			content ""
		
		&:after
			display table
			clear both
	
	/* Single */
	.single
		article
			.entry-content
				img
					margin: 30px 0
	
	/* Blog Page Navigation */
	.pagination
		padding-top 30px
		text-align center
		
		.page-numbers
			padding 16px 20px
			text-align center
			display inline-block
			border-radius 5px
			box-shadow 0 0 35px 0 rgba(0, 0, 0, 0.15)
			margin-right 10px
			color secondary-colour
			font-weight 600
			
			&.current
			&:hover
				background default-colour
				color white-colour
			
			&:last-child
				margin-right 0

	/* Post Meta Area */
	.post-meta-area
		> div
			margin-top 30px