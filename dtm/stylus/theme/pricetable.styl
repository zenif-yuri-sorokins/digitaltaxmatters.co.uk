#progressbar {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
  counter-reset: step;
  list-style: none;
  padding: 0;
}
#progressbar li {
  position: relative;
  text-align: center;
  flex: 1;
  color: #999;
  i{
    color:  #174471;
  }
}

#progressbar li::before {
  counter-increment: step;
  content: counter(step);
  width: 30px;
  height: 30px;
  line-height: 30px;
  display: block;
  // background: #ddd;
  border: 1px solid #56a9fa;
  border-radius: 50%;
  margin: 0 auto 10px auto;
}

#progressbar li.active {
  color: #000;
  font-weight: 600;
 }

#progressbar li.active::before {
  background: #174471;
  color: #fff;
   border: 1px solid #174471;

}

.action-button {
